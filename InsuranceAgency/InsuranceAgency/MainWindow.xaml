<Window x:Class="InsuranceAgency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InsuranceAgency"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Header" Text="Страховое агенство" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontFamily="Times New Roman"></TextBlock>
        <Grid Background="#6495ED" Panel.ZIndex="-2"></Grid>
        <Grid Grid.Row="4" Grid.ColumnSpan="3" Background="#7B68EE" Panel.ZIndex="-2"></Grid>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" x:Name="MainFrame" Grid.Row="1"></Frame>
        <Button x:Name="BtnBack" HorizontalAlignment="Right" Content="Назад" Click="BtnBack_Click"></Button>
    </Grid>
</Window>
